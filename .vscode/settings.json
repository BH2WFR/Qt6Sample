{
	"C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
	//* =================== 在 vscode 文件目录 搜索功能中 隐藏无关文件
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.vs": true,
		"**/3rdLib" : true,
		"**/3rdLibs" : true,
		"**/3rdlib" : true,
		"**/3rdlibs" : true,
		"**/build" : true,
		"**/install" : true,
		"**/out" : true,
		"**/cmake_install.cmake": true,
		"**/*.cmake.in" : true,
		"**/CMakeFiles": true,
		"**/assets" : true, //typora markdown 图片
		"**/desktop.ini": true,
		"**/CMakeLists.txt.user": true,
	},
	"search.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.vs": true,
		"3rdLib" : true,
		"3rdLibs" : true,
		"3rdlib" : true,
		"3rdlibs" : true,
		"build" : true,
		"install" : true,
		"out" : true,
		"**/cmake_install.cmake": true,
		"**/*.cmake.in" : true,
		"**/CMakeFiles": true,
		"**/assets" : true, //typora markdown 图片
		"**/desktop.ini": true,
		"**/CMakeLists.txt.user": true,
	},
	"clangd.arguments": [
		"--background-index",
		"--compile-commands-dir=build",
		"-j=12",
		"--clang-tidy",
		 "--all-scopes-completion",
		 "--completion-style=detailed",
		 "--header-insertion=iwyu",
		 "--function-arg-placeholders",
		 "--pch-storage=disk",
	],
	"cSpell.enabledLanguageIds": [
		"asciidoc",
		"c",
		"cpp",
		"csharp",
		"css",
		"elixir",
		"erlang",
		"git-commit",
		"go",
		"graphql",
		"handlebars",
		"haskell",
		"html",
		"jade",
		"java",
		"javascript",
		"javascriptreact",
		"json",
		"jsonc",
		"jupyter",
		"latex",
		"less",
		"markdown",
		"php",
		"plaintext",
		"python",
		"pug",
		"restructuredtext",
		"rust",
		"scala",
		"scss",
		"scminput",
		"swift",
		"text",
		"typescript",
		"typescriptreact",
		"vue",
		"yaml",
		"yml",
		"COBOL",
		"ACUCOBOL"
	],
}
